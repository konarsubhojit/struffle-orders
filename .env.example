# ============================================
# Environment Variables for Deployment
# ============================================
# Copy this file to .env.local and fill in your values
# ============================================

# ----------------------
# Application
# ----------------------
# Node environment (development, production, test)
NODE_ENV=production

# Public API URL for client-side requests (relative for same-origin)
NEXT_PUBLIC_API_URL=/api

# Application version number displayed in the UI
NEXT_PUBLIC_APP_VERSION=2.0.0

# Customer feedback app URL (for order feedback links)
NEXT_PUBLIC_FEEDBACK_APP_URL=https://your-feedback-app.vercel.app

# ----------------------
# NextAuth.js
# ----------------------
# The canonical URL of your site (required in production)
NEXTAUTH_URL=https://your-app.vercel.app

# A random secret used to encrypt tokens (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-key

# ----------------------
# Google OAuth
# ----------------------
# Google Cloud Console credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ----------------------
# Database
# ----------------------
# Neon Serverless PostgreSQL connection string (primary)
NEON_DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require

# Database URL (fallback if NEON_DATABASE_URL is not set)
DATABASE_URL=

# ----------------------
# Redis (Optional - for caching)
# ----------------------
# Redis connection URL (leave empty to disable Redis caching)
REDIS_URL=redis://default:password@host:6379

# ----------------------
# Vercel Blob Storage
# ----------------------
# Token for image uploads
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxxx

# ----------------------
# SMTP Configuration (Optional - for email notifications)
# ----------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# ----------------------
# Scheduled Jobs / Cron
# ----------------------
# Secret for authenticating digest job requests
DIGEST_JOB_SECRET=your-digest-job-secret

# Vercel Cron secret (automatically set by Vercel when using vercel.json cron)
CRON_SECRET=your-cron-secret

# ----------------------
# Logging
# ----------------------
# Log level: debug, info, warn, error (defaults to 'info' in production)
LOG_LEVEL=info

# ----------------------
# Development Only (DO NOT USE IN PRODUCTION)
# ----------------------
# Set to 'true' to bypass authentication (only works when NODE_ENV !== 'production')
# AUTH_DISABLED=true