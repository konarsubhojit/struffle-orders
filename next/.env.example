# Database Configuration
# Neon Serverless PostgreSQL connection string (primary)
NEON_DATABASE_URL=

# Database URL (fallback if NEON_DATABASE_URL is not set)
DATABASE_URL=

# Redis Configuration (optional, for caching)
REDIS_URL=

# Authentication Configuration
# Set to 'true' to disable authentication in development (optional)
AUTH_DISABLED=

# Cron Job Configuration (optional)
CRON_SECRET=

# Email Digest Job Configuration (optional)
DIGEST_JOB_SECRET=

# SMTP Configuration (for email notifications, optional)
SMTP_HOST=
SMTP_FROM=

# Logging Configuration (optional)
# Set to 'debug', 'info', 'warn', 'error'
LOG_LEVEL=

# Application Configuration
# Public API URL for client-side requests
NEXT_PUBLIC_API_URL=

# Application version number
NEXT_PUBLIC_APP_VERSION=

# Customer feedback app URL
NEXT_PUBLIC_FEEDBACK_APP_URL=

# Node environment (development, production, test)
NODE_ENV=
